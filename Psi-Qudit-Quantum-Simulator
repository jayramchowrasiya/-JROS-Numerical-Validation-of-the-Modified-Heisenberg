    <script>
        // Global variables
        let evolutionChart = null;
        let simulationHistory = [];

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeSliders();
            initializeChart();
            runSimulation();
        });

        function initializeSliders() {
            const sliders = [
                { id: 'h_coupling', display: 'h_value' },
                { id: 'k_coupling', display: 'k_value' },
                { id: 'eta_coupling', display: 'eta_value' },
                { id: 'entropy', display: 'entropy_value' },
                { id: 'conscious', display: 'conscious_value' },
                { id: 'time', display: 'time_value' }
            ];

            sliders.forEach(slider => {
                const element = document.getElementById(slider.id);
                const display = document.getElementById(slider.display);
                
                element.addEventListener('input', function() {
                    display.textContent = parseFloat(this.value).toFixed(2);
                });
            });
        }

        function initializeChart() {
            const ctx = document.getElementById('evolutionChart').getContext('2d');
            evolutionChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [
                        {
                            label: '|0‚ü© (Void)',
                            data: [],
                            borderColor: '#667eea',
                            backgroundColor: 'rgba(102, 126, 234, 0.1)',
                            tension: 0.4
                        },
                        {
                            label: '|1‚ü© (Identity)',
                            data: [],
                            borderColor: '#f093fb',
                            backgroundColor: 'rgba(240, 147, 251, 0.1)',
                            tension: 0.4
                        },
                        {
                            label: '|œÄ‚ü© (Oscillation)',
                            data: [],
                            borderColor: '#4facfe',
                            backgroundColor: 'rgba(79, 172, 254, 0.1)',
                            tension: 0.4
                        },
                        {
                            label: '|‚àû‚ü© (Field)',
                            data: [],
                            borderColor: '#43e97b',
                            backgroundColor: 'rgba(67, 233, 123, 0.1)',
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 1,
                            title: {
                                display: true,
                                text: 'Probability'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Time (ns)'
                            }
                        }
                    }
                }
            });
        }

        function runSimulation() {
            // Get parameters
            const h = parseFloat(document.getElementById('h_coupling').value);
            const kappa = parseFloat(document.getElementById('k_coupling').value);
            const eta = parseFloat(document.getElementById('eta_coupling').value);
            const theta = parseFloat(document.getElementById('entropy').value);
            const C = parseFloat(document.getElementById('conscious').value);
            const t_max = parseFloat(document.getElementById('time').value);

            // Build Hamiltonian
            const H = [
                [0, h, 0, 0],
                [h, 0, kappa, 0],
                [0, kappa, 0, eta],
                [0, 0, eta, 0]
            ];

            // Decoherence rates
            const gamma_0 = 1.0;
            const alpha = [0.1, 0.5, 1.0, 0.3];
            const gamma = alpha.map(a => gamma_0 * Math.exp(a * theta));

            // Initial state (equal superposition)
            let psi = [0.5, 0.5, 0.5, 0.5];
            
            // Normalize
            const norm = Math.sqrt(psi.reduce((sum, val) => sum + val * val, 0));
            psi = psi.map(val => val / norm);

            // Time evolution
            const dt = 0.5; // ns
            const steps = Math.floor(t_max / dt);
            
            simulationHistory = [];
            const timePoints = [];
            const prob0 = [];
            const prob1 = [];
            const probPi = [];
            const probInf = [];

            for (let step = 0; step <= steps; step++) {
                const t = step * dt;
                
                // Store probabilities
                const probs = psi.map(val => val * val);
                timePoints.push(t.toFixed(1));
                prob0.push(probs[0]);
                prob1.push(probs[1]);
                probPi.push(probs[2]);
                probInf.push(probs[3]);

                // Evolve one step
                const psi_new = [...psi];
                
                // Hamiltonian evolution: -iH
                for (let i = 0; i < 4; i++) {
                    let sum = 0;
                    for (let j = 0; j < 4; j++) {
                        sum += H[i][j] * psi[j];
                    }
                    psi_new[i] -= sum * dt * 0.1; // scaled for visualization
                }

                // Decoherence: -Œì
                for (let i = 0; i < 4; i++) {
                    psi_new[i] *= Math.exp(-gamma[i] * dt * 0.01);
                }

                // Observer injection toward |1‚ü©
                if (C > 0) {
                    const tau = 10; // ns
                    const injection = C * Math.exp(-Math.abs(t - t_max/2) / tau);
                    psi_new[1] += injection * dt * 0.5;
                }

                // Normalize
                const norm_new = Math.sqrt(psi_new.reduce((sum, val) => sum + val * val, 0));
                psi = psi_new.map(val => val / norm_new);
            }

            // Update chart
            evolutionChart.data.labels = timePoints;
            evolutionChart.data.datasets[0].data = prob0;
            evolutionChart.data.datasets[1].data = prob1;
            evolutionChart.data.datasets[2].data = probPi;
            evolutionChart.data.datasets[3].data = probInf;
            evolutionChart.update();

            // Final probabilities
            const final_probs = psi.map(val => val * val);
            updateStateDisplay(final_probs);
            updateMetrics(final_probs, H);
            updatePhysicalReadout(final_probs);
            updatePredictions(theta, C, final_probs);
        }

        function updateStateDisplay(probs) {
            const states = ['0', '1', 'pi', 'inf'];
            let maxProb = Math.max(...probs);
            
            states.forEach((state, idx) => {
                const prob = probs[idx];
                const percent = (prob * 100).toFixed(1);
                
                document.getElementById(`prob_${state}`).textContent = `${percent}%`;
                document.getElementById(`bar_${state}`).style.height = `${prob * 100}%`;
                
                // Highlight most probable state
                const card = document.getElementById(`state_${state}`);
                if (prob === maxProb && prob > 0.3) {
                    card.classList.add('active');
                } else {
                    card.classList.remove('active');
                }
            });
        }

        function updateMetrics(probs, H) {
            // Purity
            const purity = probs.reduce((sum, p) => sum + p * p, 0);
            document.getElementById('purity').textContent = purity.toFixed(3);

            // Von Neumann entropy
            const S = -probs.reduce((sum, p) => {
                return p > 1e-10 ? sum + p * Math.log2(p) : sum;
            }, 0);
            document.getElementById('entropy_metric').textContent = S.toFixed(3);

            // Energy expectation
            const E = probs.reduce((sum, p, i) => {
                let diag = 0;
                for (let j = 0; j < 4; j++) {
                    diag += H[i][j] * (i === j ? 1 : 0);
                }
                return sum + p * diag;
            }, 0);
            document.getElementById('energy').textContent = E.toFixed(3);
        }

        function updatePhysicalReadout(probs) {
            // Electron current
            const I_e = 100 * probs[1] + 10 * probs[2] + 100 * probs[3];
            document.getElementById('current').textContent = I_e.toFixed(1) + ' nA';

            // Photon intensity
            const I_gamma = 1e3 * probs[1] + 1e6 * probs[2] + 1e6 * probs[3];
            const I_gamma_display = I_gamma >= 1e6 ? 
                (I_gamma / 1e6).toFixed(2) + 'M' : 
                (I_gamma / 1e3).toFixed(1) + 'K';
            document.getElementById('photons').textContent = I_gamma_display;

            // Classify state
            const threshold_e = 50;
            const threshold_gamma = 1e5;
            let classified;
            
            if (I_e < threshold_e && I_gamma < threshold_gamma) {
                classified = '|0‚ü©';
            } else if (I_e > threshold_e && I_gamma < threshold_gamma) {
                classified = '|1‚ü©';
            } else if (I_e < threshold_e && I_gamma > threshold_gamma) {
                classified = '|œÄ‚ü©';
            } else {
                classified = '|‚àû‚ü©';
            }
            
            document.getElementById('classified').textContent = classified;
        }

        function updatePredictions(theta, C, probs) {
            // P1: Critical entropy
            const beta_0 = 1.0;
            const beta_1 = 0.5;
            const theta_c = beta_0 + beta_1 * C;
            document.getElementById('theta_c').textContent = theta_c.toFixed(2);

            const p1_status = theta > theta_c ? 
                'Collapsed (classical)' : 
                'Quantum superposition';
            document.getElementById('p1_status').textContent = p1_status;
            document.getElementById('p1_status').style.color = 
                theta > theta_c ? '#f5576c' : '#43e97b';

            // P2: Drift parameters (simplified)
            const v = (probs[1] - 0.25) * 10;
            const g = C * 0.5;
            document.getElementById('drift_v').textContent = v.toFixed(2);
            document.getElementById('drift_g').textContent = g.toFixed(2);
        }

        function resetParameters() {
            document.getElementById('h_coupling').value = 0.5;
            document.getElementById('k_coupling').value = 0.7;
            document.getElementById('eta_coupling').value = 0.3;
            document.getElementById('entropy').value = 0;
            document.getElementById('conscious').value = 0;
            document.getElementById('time').value = 10;
            
            document.getElementById('h_value').textContent = '0.50';
            document.getElementById('k_value').textContent = '0.70';
            document.getElementById('eta_value').textContent = '0.30';
            document.getElementById('entropy_value').textContent = '0.0';
            document.getElementById('conscious_value').textContent = '0.00';
            document.getElementById('time_value').textContent = '10';
            
            runSimulation();
        }
    </script>
</body>
</html>
